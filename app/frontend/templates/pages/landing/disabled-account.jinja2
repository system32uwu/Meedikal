{% extends "layouts/landing-base.jinja2" %}
{% from 'components/app/form-field.jinja2' import formField with context %}
{% block title %}Enable Account{% endblock %}

{% block pageContent %}
<div class="flex flex-col px-12 justify-center items-center w-full pt-4">
    <h1>Your account was disabled, you can request for it to be enabled.</h1>
    <div class="shadow-xl p-4 space-y-2 w-full" id="user-fields">
        {{formField("ID")}} 
    </div>
    <div class="mb-4 mt-4 flex justify-between w-1/2 space-x-10">
        <button onclick="send()" class="bg-turqoise w-full font-bold text-white text-center text-sm rounded-full py-2">
          Send
        </button>
    </div>
</div>
<script>
    let id = document.getElementById("ID")

    const send = () => {
        let body = `CI: ${id.value}`

        let mail = document.createElement("a");
        mail.href = `mailto:support@hccompany.com?subject=Enable%20Account&body=${encodeURIComponent(body)}`;
        mail.click();
    }
</script>
{% endblock %}